{
  "name": "Ao",
  "productName": "Ao",
  "version": "1.0.1",
  "description": "Elegant Microsoft To-Do desktop app",
  "license": "MIT",
  "author": {
    "name": "Klaus Sinani",
    "email": "klaussinani@gmail.com",
    "url": "https://klaussinani.github.io"
  },
  "maintainers": [
    {
      "name": "Kevin Wang",
      "email": "wjlfish@qq.com",
      "url": "https://wjlnb.com"
    }
  ],
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "xo && stylelint 'src/style/*.css'",
    "release": "build --publish always",
    "start": "electron .",
    "pack": "electron-packager . Ao --platform=win32 --electron-version=4.2.2 --icon=./build/icon.ico --arch=x64 --download.mirrorOptions.mirror=https://npm.taobao.org/mirrors/electron/ --asar --app-version=1.0.1 --build-version=1.0.1 --out=outName --overwrite --no-package-manager"
  },
  "dependencies": {
    "auto-launch": "^5.0.1",
    "electron-context-menu": "^0.9.1",
    "electron-debug": "^1.4.0",
    "electron-dl": "^1.10.0",
    "electron-packager": "^15.3.0",
    "electron-settings": "^3.1.4",
    "spdx-license-ids": "^3.0.10"
  },
  "devDependencies": {
    "electron": "4.2.12",
    "electron-builder": "20.40.2",
    "stylelint": "^9.9.0",
    "xo": "*"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "rules": {
      "quote-props": 0,
      "unicorn/prefer-query-selector": 0
    },
    "space": 2
  },
  "stylelint": {
    "rules": {
      "block-closing-brace-empty-line-before": "never",
      "block-closing-brace-newline-after": "always",
      "block-no-empty": true,
      "block-opening-brace-space-before": "always",
      "color-hex-case": "upper",
      "color-hex-length": "long",
      "color-no-invalid-hex": true,
      "comment-no-empty": true,
      "declaration-block-semicolon-space-before": "never",
      "indentation": 2,
      "max-empty-lines": 0,
      "no-duplicate-selectors": true
    }
  },
  "build": {
    "appId": "com.wjlnb.noyou",
    "files": [
      "**/*",
      "!media${/*}",
      "!docs${/*}"
    ],
    "linux": {
      "category": "Office",
      "description": "Ao is an unofficial, featureful, open source, community-driven, free Microsoft To-Do app, used by people in more than 120 countries.",
      "synopsis": "Elegant Microsoft To-Do desktop app",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "license": "license.md"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    }
  }
}
